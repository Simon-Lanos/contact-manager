{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ contact.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ contact.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td><a href="mailto:{{ contact.email }}">{{ contact.email }}</a></td>
            </tr>
            <tr>
                <th>Phone</th>
                <td><a href="phoneto:{{ contact.phone }}">{{ contact.phone }}</a></td>
            </tr>
            <tr>
                <th>Mobile</th>
                <td><a href="phoneto:{{ contact.mobile }}">{{ contact.mobile }}</a></td>
            </tr>
            <tr>
                <th>Company</th>
                <td>
                    <a href="{{ path('company_show', {'id': contact.companyAddress.company.id}) }}">{{ contact.companyAddress.company.name }}</a>
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-secondary" href="{{ path('contact_index') }}">back to list</a>

    <a class="btn btn-warning" href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
